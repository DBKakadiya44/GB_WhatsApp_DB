<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    android:layout_margin="@dimen/_4sdp"
    android:id="@+id/qurekanetive"
    app:cardCornerRadius="@dimen/_8sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:background="@drawable/radius_btn"
            android:paddingHorizontal="@dimen/_2sdp"
            android:text="AD"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ad"
            android:layout_toLeftOf="@id/btnplaynow">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="@dimen/_43sdp"
                android:layout_height="@dimen/_43sdp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/qurekalogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mgl_square1" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_toRightOf="@id/card"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play MGL Games &amp; Win Coins"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:text="Play MGL Games &amp; Earn Upto 1,00,000 Coins Daily."
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/btnplaynow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_32sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="2dp"
            android:paddingHorizontal="@dimen/_6sdp"
            android:background="@drawable/radius_btn"
            android:gravity="center"
            android:text="Play Now"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>