<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlLoading"
        android:visibility="gone"
        android:background="#A8ED98"
        android:layout_height="@dimen/_224sdp">

        <TextView
            android:id="@+id/txt_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Ads Loading.."
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qurekanetive"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_margin="@dimen/_4sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AD"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:background="@drawable/radius_btn"
            android:paddingHorizontal="@dimen/_2sdp"
            android:layout_marginVertical="1dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="@dimen/_43sdp"
                    android:layout_height="@dimen/_43sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <ImageView
                        android:id="@+id/qurekalogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mgl_square1"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/card"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play MGL Games &amp; Win Coins"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_4sdp"
                        android:text="Play MGL Games &amp; Earn Upto 1,00,000 Coins Daily."
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/qurekaimg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/native_banner_5"
                android:scaleType="fitXY"
                android:layout_marginVertical="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/btnplaynow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/radius_btn"
                android:gravity="center"
                android:text="Play Now"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />



        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>